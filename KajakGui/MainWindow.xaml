<Window x:Class="KajakGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KajakGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="485" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="alapGrid" Width="auto" AutoGenerateColumns="False" Margin="10,10,491,270">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nev" Binding="{Binding Nev}" />
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="HajoTipus" Binding="{Binding HajoTipus}" />
                <DataGridTextColumn Header="SzemelyekSzama" Binding="{Binding SzemelyekSzama}" />
                <DataGridTextColumn Header="elvitelOraja" Binding="{Binding elvitelOraja}" />
                <DataGridTextColumn Header="elvitelPerce" Binding="{Binding elvitelPerce}" />
                <DataGridTextColumn Header="VisszahozatalOraja" Binding="{Binding VisszahozatalOraja}" />
                <DataGridTextColumn Header="VisszahozatalPerce" Binding="{Binding VisszahozatalPerce}" />

            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="szamoloGrid" Width="auto" AutoGenerateColumns="False" Margin="10,248,491,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nev" Binding="{Binding Nev}" />
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="HajoTipus" Binding="{Binding HajoTipus}" />
                <DataGridTextColumn Header="SzemelyekSzama" Binding="{Binding SzemelyekSzama}" />
                <DataGridTextColumn Header="elvitelOraja" Binding="{Binding elvitelOraja}" />
                <DataGridTextColumn Header="elvitelPerce" Binding="{Binding elvitelPerce}" />
                <DataGridTextColumn Header="VisszahozatalOraja" Binding="{Binding VisszahozatalOraja}" />
                <DataGridTextColumn Header="VisszahozatalPerce" Binding="{Binding VisszahozatalPerce}" />

            </DataGrid.Columns>
        </DataGrid>
        <ListBox x:Name="Listbox" HorizontalAlignment="Left" Height="154" Margin="313,10,0,0" VerticalAlignment="Top" Width="182"/>
        <ComboBox x:Name="Ora" HorizontalAlignment="Left" Height="35" Margin="121,193,0,0" VerticalAlignment="Top" Width="92"/>
        <ComboBox x:Name="Perc" HorizontalAlignment="Left" Height="35" Margin="218,193,0,0" VerticalAlignment="Top" Width="91" SelectionChanged="Perc_SelectionChanged"/>
        <Button x:Name="napibevetelBtn" Content="Napi Bevétel" HorizontalAlignment="Left" Height="35" Margin="10,193,0,0" VerticalAlignment="Top" Width="106" Click="napibevetelBtn_Click"/>
        <Label x:Name="eredmenyLbl" Content="0" HorizontalAlignment="Left" Height="34" Margin="500,10,0,0" VerticalAlignment="Top" Width="143" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="NevTextBox" HorizontalAlignment="Center" Height="27" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="152" Margin="0,176,0,0"/>
        <ComboBox x:Name="HajodIdCb" HorizontalAlignment="Center" Height="26" Margin="0,208,0,0" VerticalAlignment="Top" Width="152"/>
        <ComboBox x:Name="HajoTipusCb" HorizontalAlignment="Center" Height="26" Margin="0,239,0,0" VerticalAlignment="Top" Width="152"/>
        <ComboBox x:Name="elvitelOrajaCb" HorizontalAlignment="Center" Height="26" Margin="0,301,0,0" VerticalAlignment="Top" Width="152"/>
        <ComboBox x:Name="elvitelPerceCb" HorizontalAlignment="Center" Height="26" Margin="0,332,0,0" VerticalAlignment="Top" Width="152"/>
        <ComboBox x:Name="VisszahozatalOrajaCb" HorizontalAlignment="Center" Height="26" Margin="0,363,0,0" VerticalAlignment="Top" Width="152"/>
        <ComboBox x:Name="VisszahozatalPerce" HorizontalAlignment="Center" Height="26" Margin="0,394,0,0" VerticalAlignment="Top" Width="152"/>
        <ComboBox x:Name="HajoSzemelyekSzamaCB" HorizontalAlignment="Center" Height="26" Margin="0,270,0,0" VerticalAlignment="Top" Width="152"/>
        <Button Content="Button" HorizontalAlignment="Center" Height="39" Margin="0,425,0,0" VerticalAlignment="Top" Width="152" Click="Button_Click"/>

    </Grid>
</Window>
